
@{
    ViewBag.Title = "SocialNetworksManagment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<body>

    <br />
    <div>
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">
                <div class="alert-success" id="divSuccessSocialNetworks">@TempData["msgSocialNeteworks"]</div>

                <div class="title"style="font-family:Tahoma">
                    <br />
                    <h4 style="font-family:Tahoma">لطفا آدرس لینک شبکه های اجتماعی را وارد نمایید</h4>
                    <br />
                    <h4 style="font-family:Tahoma">https://t.me/cobiaxshiraz : مثال   </h4>
                    <br />
                    <h4 style="font-family:Tahoma">https://www.facebook.com/cobiaxshiraz : مثال   </h4>
                    <hr />

                    <br />
                    <br />
                    <form action="/SocialNetworksManagment/AddSocialNetwork" method="post">





                        <div class="form-group form-inline text-center" style="align-content:center;font-family:Tahoma">
                            @foreach (var item in ViewBag.showallsocialnetwoks as IEnumerable<Cobiax.Models.SocialNetwork>)
                            {
                                <div class="form-group">

                                    <span><small><img src="~/Template/assets/images/Icons/if_telegram_1419139.png" style="width:30px;height:30px;padding-bottom:3%" /></small></span>   <input dir="ltr" title="آیدی کانال یا اکانت تلگرام" class="form-control" value="@item.Teleg" name="Teleg" placeholder="Telegram Id/Channel Id">
                                </div>
            


                                        <div class="form-group">

                                            <span><small><img src="~/Template/assets/images/Icons/instagram.png" style="width:30px;height:30px;padding-bottom:3%" /></small></span>   <input dir="ltr" title="آیدی اینستاگرام" name="Instag" class="form-control" value="@item.Instag" placeholder="Instagram Id">
                                        </div>
                                        <div class="form-group">

                                            <span><small><img src="~/Template/assets/images/Icons/facebook.png" style="width:30px;height:30px;padding-bottom:3%" /></small></span>   <input dir="ltr" title="آیدی فیسبوک" name="facebook" class="form-control" value="@item.facebook" placeholder="Facebook Id">
                                        </div>
                            }




                        </div>

                        <hr />
                        <br />
                      




                        <div style="margin:auto" class="text-center">
                            <button class="btn btn-success btn-md" id="btnSaveSocialNetworks">ذخیره اطلاعات</button>
                        </div>
                    </form>
                </div>

                <script>
                    btnSaveSocialNetworks.onclick = function () {
                        this.textContent='در حال ذخیره اطلاعات'
                    }
                </script>
            </div>
</body>




