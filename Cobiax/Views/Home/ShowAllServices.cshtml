
@{
    ViewBag.Title = "ShowAllProjects";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@for (int i = 0; i < 4; i++)
{
    <br />
}
<div class="container text-center"style="font-family:Tahoma;font-size:xx-large">خدمات ما</div>
<section class="post-area blog-page section-padding">
    <div class="container">
        <div class="row">

            @foreach (var item in ViewBag.showAllServices as IEnumerable<Cobiax.Models.Sp_Readservices_Result>)
            {
                <div class="col-md-4 col-sm-6" style="border:1px solid #808080;border-radius:10px">
                    <a href="single-blog-2.html" class="single-post-item wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
                        <div class="post-thumb">
                            <span>آپارتمان</span>
                            <a href="/home/ShowOneService?id=@item.Id">
                                <img src="@($"data:image/jpeg;base64,{Convert.ToBase64String(item.Logo)}")" alt="@item.Subject">
                            </a>
                        </div>

                        <div class="post-content text-center">
                            <a href="/home/ShowOneService?id=@item.Id" style="font-size:x-large">@item.Subject</a>
                            <div class="author-box">
                                <div class="author-img">

                                </div>

                                <a class="btn btn-primary" href="/home/ShowOneService?id=@item.Id">مشاهده بیشتر</a>

                            </div>
                        </div>
                    </a>
                </div>
            }


        </div>

    </div>

</section>

@for (int i = 0; i < 8; i++)
{
    <br />
}

